<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.yz.baiduai.viewmodel.MainViewModel" />
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:scaleType="fitXY"
                android:src="@mipmap/bg_banner"
                tools:ignore="ContentDescription" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_20"
                android:paddingStart="@dimen/dp_20"
                android:paddingEnd="@dimen/dp_20">

                <Button
                    android:id="@+id/tv_general"
                    style="@style/home_text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_130"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:background="@mipmap/bg_general"
                    android:text="@string/general" />

                <Button
                    android:id="@+id/tv_plant"
                    style="@style/home_text"
                    android:layout_width="@dimen/dp_163"
                    android:layout_height="@dimen/dp_180"
                    android:layout_below="@+id/tv_general"
                    android:background="@mipmap/bg_plant"
                    android:text="@string/plant" />

                <Button
                    android:id="@+id/tv_animal"
                    style="@style/home_text"
                    android:layout_width="@dimen/dp_163"
                    android:layout_height="@dimen/dp_85"
                    android:layout_below="@+id/tv_general"
                    android:layout_alignParentEnd="true"
                    android:background="@mipmap/bg_animal"
                    android:text="@string/animal" />

                <Button
                    android:id="@+id/tv_ingredient"
                    style="@style/home_text"
                    android:layout_width="@dimen/dp_163"
                    android:layout_height="@dimen/dp_85"
                    android:layout_below="@+id/tv_animal"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/dp_10"
                    android:background="@mipmap/bg_ingredient"
                    android:text="@string/ingredient" />

            </RelativeLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>